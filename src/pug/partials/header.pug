
include ../modules/vars

header.header
  .header-inner.container
    .header__logo.logo
      a.logo__link(href="/")
        img.logo__src(src=require('@/images/logo.svg') alt="")
    .header__nav-wrapper#nav
      nav.header__nav.nav
        ul.nav-list
          each val in menu
            li.nav__item(class=val.hasCounter ? 'nav__item--count' : null )
              a.nav__link(href=val.link)
                span=val.name
                span(aria-hidden="true")=val.name
              if val.hasCounter
                span.nav__count 3
      .header__contact-info.hidden-desktop
        .contacts-list
          .contacts-list__item
            h6.contacts-list__heading Adresse
            address.contacts-list__content Alfredstraße 155, 45131 Essen
          .contacts-list__item
            h6.contacts-list__heading Telefon
            .contacts-list__content
              a.contacts-list__link(href="tel:+49 201 84275-0") +49 201 84275-0
          .contacts-list__item
            h6.contacts-list__heading E-Mail
            .contacts-list__content
              a.contacts-list__link(href="mailto:info@architekten-kfp.de") info@architekten-kfp.de
    a.header__btn.btn.btn--primary(href="#")
      span.btn__text Jetzt bewerben
    button.header__mobile-btn.mobile-menu-btn.hidden-desktop(aria-expanded="false" aria-label="Menü öffnen" aria-controls="nav")
      span
      span
